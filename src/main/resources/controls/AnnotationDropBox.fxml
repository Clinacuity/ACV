<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.HBox?>
<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Separator?>
<?import com.jfoenix.controls.JFXComboBox?>

<fx:root type="javafx.scene.layout.StackPane"
         xmlns="http://javafx.com/javafx/8.0.112"
         xmlns:fx="http://javafx.com/fxml/1">
    <Pane styleClass="draggable"/>
    <VBox spacing="10">
        <HBox spacing="15">
            <Label text="Annotation Name:" styleClass="text-medium-bold" alignment="CENTER_RIGHT" maxHeight="Infinity"/>
            <JFXTextField promptText="name" styleClass="text-medium-normal"/>
        </HBox>
        <Separator maxWidth="Infinity"/>
        <VBox spacing="5" fx:id="attributeBox">
            <HBox spacing="8">
                <Label text="Parent:" styleClass="text-medium-normal" alignment="CENTER_RIGHT" maxHeight="Infinity"/>
                <HBox alignment="CENTER_RIGHT">
                    <JFXTextField promptText="parent name" styleClass="text-medium-normal"/>
                </HBox>
            </HBox>
            <HBox spacing="8">
                <Label text="XPath:" styleClass="text-medium-normal" alignment="CENTER_RIGHT" maxHeight="Infinity"/>
                <JFXTextField promptText="parent name" styleClass="text-medium-normal"/>
            </HBox>
            <HBox spacing="8">
                <Label text="Begin Attr:" styleClass="text-medium-normal" alignment="CENTER_RIGHT" maxHeight="Infinity"/>
                <JFXTextField promptText="parent name" styleClass="text-medium-normal"/>
            </HBox>
            <HBox spacing="8">
                <Label text="End Attr:" styleClass="text-medium-normal" alignment="CENTER_RIGHT" maxHeight="Infinity"/>
                <JFXTextField promptText="parent name" styleClass="text-medium-normal"/>
            </HBox>
            <HBox spacing="8">
                <Label text="XPath:" styleClass="text-medium-normal" alignment="CENTER_RIGHT" maxHeight="Infinity"/>
                <JFXComboBox promptText="select attribute" styleClass="text-medium-normal"/>
            </HBox>
        </VBox>
        <Separator maxWidth="Infinity"/>
        <HBox spacing="5" fx:id="referencesBox">
            <Label text="Sources:" styleClass="text-small-normal"/>
        </HBox>
        <padding>
            <Insets topRightBottomLeft="10"/>
        </padding>
    </VBox>
</fx:root>
