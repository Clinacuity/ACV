<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import com.jfoenix.controls.JFXComboBox?>
<fx:root type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/8.0.112"
         xmlns:fx="http://javafx.com/fxml/1"
         alignment="TOP_CENTER" spacing="15">
    <StackPane>
        <Label fx:id="attributeLabel" styleClass="text-medium-normal" maxWidth="120"/>
        <JFXTextField fx:id="attributeName" promptText="parent name (sys)" styleClass="text-medium-normal" maxWidth="120"/>
        <padding>
            <Insets right="10"/>
        </padding>
    </StackPane>
    <StackPane>
        <JFXComboBox fx:id="sysValuesCombo" styleClass="text-medium-normal" minWidth="175"/>
        <JFXTextField fx:id="sysValue" promptText="parent name (sys)" styleClass="text-medium-normal" minWidth="175"/>
    </StackPane>
    <HBox alignment="CENTER">
        <Separator orientation="VERTICAL"/>
    </HBox>
    <StackPane>
        <JFXComboBox fx:id="refValuesCombo" styleClass="text-medium-normal" minWidth="175"/>
        <JFXTextField fx:id="refValue" promptText="parent name (ref)" styleClass="text-medium-normal" minWidth="175"/>
    </StackPane>
    <HBox spacing="10" alignment="CENTER">
        <Label fx:id="lockButton" styleClass="button-lock" onMouseClicked="#toggleLock">
            <graphic>
                <ImageView fitHeight="16" preserveRatio="true" pickOnBounds="true">
                    <Image url="/img/icons8/lock.png"/>
                </ImageView>
            </graphic>
        </Label>
        <Label fx:id="removeButton" styleClass="button-delete" onMouseClicked="#removeRow">
            <graphic>
                <ImageView fitHeight="16" preserveRatio="true" pickOnBounds="true">
                    <Image url="/img/icons8/delete.png"/>
                </ImageView>
            </graphic>
        </Label>
    </HBox>
</fx:root>