<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<?import javafx.scene.control.Button?>
<GridPane alignment="CENTER" minHeight="300" minWidth="400"
          xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.clinacuity.acv.controllers.LoadScreenController">
    <padding>
        <Insets bottom="100" top="25" />
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="15"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="30"/>
        <ColumnConstraints percentWidth="2"/>
        <ColumnConstraints percentWidth="18"/>
        <ColumnConstraints percentWidth="15"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="10" />
        <RowConstraints minHeight="10" prefHeight="30" />
        <RowConstraints minHeight="10" />
        <RowConstraints minHeight="10" prefHeight="10" />
        <RowConstraints minHeight="10" />
        <RowConstraints minHeight="10" prefHeight="30" />
        <RowConstraints minHeight="10" />
    </rowConstraints>

    <Label styleClass="label-header-one" text="Welcome" alignment="BOTTOM_CENTER" textAlignment="CENTER" GridPane.halignment="CENTER"
           GridPane.columnIndex="1" GridPane.columnSpan="2">
        <padding>
            <Insets bottom="50" top="50" left="50" right="50"/>
        </padding>
    </Label>

    <Label alignment="CENTER_RIGHT" text="Gold Standard:" textAlignment="RIGHT" GridPane.halignment="RIGHT"
           GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <TextField fx:id="gsInputTextField" styleClass="text-field" maxHeight="Infinity" alignment="BOTTOM_LEFT"
               GridPane.columnIndex="2" GridPane.rowIndex="2">
        <GridPane.margin><Insets right="5" left="5"/></GridPane.margin>
    </TextField>
    <Button onAction="#pickReferenceFile" text="..." textAlignment="CENTER" styleClass="button-clickable" GridPane.halignment="LEFT"
            GridPane.columnIndex="3" GridPane.rowIndex="2" maxHeight="Infinity" maxWidth="Infinity"/>

    <Label alignment="CENTER_RIGHT" text="Test Files:" textAlignment="RIGHT" GridPane.halignment="RIGHT"
           GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <TextField fx:id="testInputTextField" maxHeight="Infinity"
               GridPane.columnIndex="2" GridPane.rowIndex="4">
        <GridPane.margin><Insets right="5" left="5"/></GridPane.margin>
    </TextField>
    <Button onAction="#pickTestFile" text="..." textAlignment="CENTER" styleClass="button-clickable" GridPane.halignment="LEFT"
            GridPane.columnIndex="3" GridPane.rowIndex="4" maxHeight="Infinity" maxWidth="Infinity"/>

    <Button onAction="#runAcv" text="Run ACV" styleClass="button-actionable" GridPane.halignment="LEFT"
            GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <GridPane.margin><Insets topRightBottomLeft="10"/></GridPane.margin>
    </Button>
</GridPane>
