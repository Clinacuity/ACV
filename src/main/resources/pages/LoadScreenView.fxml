<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import com.jfoenix.controls.JFXButton?>

<GridPane alignment="CENTER" minHeight="300" minWidth="400"
          xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.clinacuity.acv.controllers.LoadScreenController">
    <padding>
        <Insets bottom="100" top="25" />
    </padding>

    <columnConstraints>
        <ColumnConstraints percentWidth="15"/>
        <ColumnConstraints percentWidth="20"/>
        <ColumnConstraints percentWidth="30"/>
        <ColumnConstraints percentWidth="2"/>
        <ColumnConstraints percentWidth="18"/>
        <ColumnConstraints percentWidth="15"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="10" />
        <RowConstraints minHeight="10" prefHeight="30" />
        <RowConstraints minHeight="10" />
        <RowConstraints minHeight="10" prefHeight="10" />
        <RowConstraints minHeight="10" />
        <RowConstraints minHeight="10" prefHeight="30" />
        <RowConstraints minHeight="10" />
    </rowConstraints>

    <Label styleClass="header-one" text="Welcome" alignment="BOTTOM_CENTER" textAlignment="CENTER"
           GridPane.halignment="CENTER" GridPane.columnIndex="1" GridPane.columnSpan="2">
        <padding>
            <Insets bottom="50" top="50" left="50" right="50"/>
        </padding>
    </Label>

    <Label alignment="CENTER_RIGHT" text="Test (System) File:" textAlignment="RIGHT" GridPane.halignment="RIGHT"
           GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <TextField fx:id="testInputTextField" maxHeight="Infinity"
               GridPane.columnIndex="2" GridPane.rowIndex="2">
        <GridPane.margin><Insets right="5" left="5"/></GridPane.margin>
    </TextField>
    <JFXButton text="..." onAction="#pickTestFile" textAlignment="CENTER" maxHeight="Infinity" maxWidth="Infinity"
               styleClass="button, button-raised, button-gray, no-focus, text-small" buttonType="RAISED"
               GridPane.halignment="LEFT" GridPane.columnIndex="3" GridPane.rowIndex="2"/>

    <Label alignment="CENTER_RIGHT" text="Gold Standard (Reference) File:" textAlignment="RIGHT" GridPane.halignment="RIGHT"
           GridPane.columnIndex="1" GridPane.rowIndex="4" />
    <TextField fx:id="gsInputTextField" styleClass="text-field" maxHeight="Infinity" alignment="BOTTOM_LEFT"
               GridPane.columnIndex="2" GridPane.rowIndex="4">
        <GridPane.margin><Insets right="5" left="5"/></GridPane.margin>
    </TextField>
    <JFXButton text="..." onAction="#pickReferenceFile" textAlignment="CENTER" maxHeight="Infinity" maxWidth="Infinity"
               styleClass="button-raised, button-gray, no-focus, text-small" buttonType="RAISED"
               GridPane.halignment="LEFT" GridPane.columnIndex="3" GridPane.rowIndex="4"/>

    <JFXButton onAction="#runAcv" text="RUN ACV" buttonType="RAISED"
               styleClass="button-raised, button-gray, text-medium"
               GridPane.halignment="LEFT" GridPane.columnIndex="3" GridPane.columnSpan="2" GridPane.rowIndex="6">
        <GridPane.margin>
            <Insets topRightBottomLeft="10"/>
        </GridPane.margin>
    </JFXButton>
</GridPane>
