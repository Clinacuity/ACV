<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<GridPane xmlns:fx="http://javafx.com/fxml/1"
          fx:controller="com.clinacuity.acv.controllers.LoadScreenController"
          minHeight="300"
          minWidth="400"
          maxHeight="Infinity"
          maxWidth="Infinity"
          alignment="CENTER">
    <padding>
        <Insets bottom="10" left="25" right="25" top="25" />
    </padding>

    <columnConstraints>
        <ColumnConstraints halignment="RIGHT"/>
        <ColumnConstraints prefWidth="20"/>
        <ColumnConstraints halignment="CENTER"/>
        <ColumnConstraints prefWidth="20"/>
        <ColumnConstraints halignment="LEFT"/>
    </columnConstraints>

    <rowConstraints>
        <RowConstraints minHeight="10"/>
        <RowConstraints minHeight="10" prefHeight="30"/>
        <RowConstraints minHeight="10"/>
        <RowConstraints minHeight="10" prefHeight="10"/>
        <RowConstraints minHeight="10"/>
        <RowConstraints minHeight="10" prefHeight="30"/>
        <RowConstraints minHeight="10"/>
    </rowConstraints>

    <Text text="Welcome" textAlignment="CENTER" GridPane.columnIndex="1">
        <font>
            <Font name="System Font" size="24.0" />
        </font>
    </Text>

    <Label alignment="CENTER_RIGHT" contentDisplay="RIGHT" text="Gold Standard:" textAlignment="RIGHT"
           GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="gsInputTextField" promptText="Folder containing documents to be de-identified"
               GridPane.columnIndex="2" GridPane.rowIndex="2"/>
    <Button onAction="#pickGsInputDir" text="Browse..." textAlignment="RIGHT"
            GridPane.columnIndex="4" GridPane.rowIndex="2"/>

    <Label alignment="CENTER_RIGHT" text="Test Files:"
           GridPane.columnIndex="0" GridPane.rowIndex="4"/>
    <TextField fx:id="testInputTextField" promptText="Folder to which de-identified versions will be saved"
               GridPane.columnIndex="2" GridPane.rowIndex="4"/>
    <Button onAction="#pickTestInputDir" text="Browse..." textAlignment="RIGHT"
            GridPane.columnIndex="4" GridPane.rowIndex="4"/>

    <Button onAction="#runAcv" text="Run ACV"
            GridPane.columnIndex="4" GridPane.rowIndex="6"/>
</GridPane>
